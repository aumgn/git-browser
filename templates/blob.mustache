<div class="source-view">
    <div class="source-header">
        <div class="meta"></div>

        <div class="btn-group pull-right">
            <a href="{{ raw_link }}" class="btn btn-small">
                <i class="icon-file"></i> Raw
            </a>
            <a href="{{ blame_link }}" class="btn btn-small">
                <i class="icon-bullhorn"></i> Blame
            </a>
            <a href="{{ commits_link }}" class="btn btn-small">
                <i class="icon-list-alt"></i> History
            </a>
        </div>
    </div>
    {{# image? }}
        <center>
            <img src="{{ raw_link }}" alt="{{ name }}" class="image-blob" />
        </center>
    {{/ image? }}

    {{# markdown? }}
        <div class="readme-view">
            <div id="readme-content">{{ blob }}</div>
        </div>
    {{/ markdown? }}

    {{# sourcecode? }}
        <pre id="sourcecode" language="{{ file_type }}">{{ blob }}</pre>
    {{/ sourcecode? }}
</div>
